<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quanta.aj.yunanjian.mywegit.Dialog_jnmu">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:background="@color/ttbar1"
           android:orientation="horizontal"
           android:layout_marginBottom="5dp">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="9"
               android:layout_height="match_parent"
               android:text="卷内目录详情"
               android:layout_marginLeft="5dp"
               android:gravity="center_vertical" />
           <ImageView
               android:id="@+id/close_btn"
               android:layout_width="30dp"
               android:layout_weight="1"
               android:layout_height="30dp"
               android:src="@drawable/action_close"
               android:layout_gravity="right|center_vertical"
               android:layout_marginRight="1dp"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_vertical|left"
               android:layout_height="match_parent"
               android:text="标题："
               android:textColor="@color/bai" />
           <EditText
               android:id="@+id/title"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:background="@drawable/bg_corners_white_b"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_vertical|left"
               android:layout_height="match_parent"
               android:text="文件原编号："
               android:textColor="@color/bai" />
           <EditText
               android:id="@+id/no"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:background="@drawable/bg_corners_white_b"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_vertical|left"
               android:layout_height="match_parent"
               android:text="文件日期："
               android:textColor="@color/bai" />
           <TextView
               android:id="@+id/time"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:gravity="center"
               android:textSize="20sp"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:background="@drawable/bg_corners_white_b"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_vertical|left"
               android:layout_height="match_parent"
               android:text="文件所在页号："
               android:textColor="@color/bai" />
           <EditText
               android:id="@+id/page"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:background="@drawable/bg_corners_white_b"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_vertical|left"
               android:layout_height="match_parent"
               android:text="备注："
               android:textColor="@color/bai" />
           <EditText
               android:id="@+id/remark"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:layout_margin="2dp"
               android:background="@drawable/bg_corners_white_b"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"
           android:orientation="horizontal"
           android:padding="10dp">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent" />
           <Button
               android:id="@+id/comit"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:text="确定"
               android:background="@drawable/bg_corners_6959cd"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent" />
           <Button
               android:id="@+id/cansel"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:text="重置"
               android:background="@drawable/bg_corners_6959cd"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent" />
       </LinearLayout>
   </LinearLayout>
</RelativeLayout>
