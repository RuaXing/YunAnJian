<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quanta.aj.yunanjian.activity.enforcement.Document01Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--抬头标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ttbar1">
            <com.quanta.aj.yunanjian.mywegit.Title_Sm_Layout
                android:id="@+id/domtt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

       <!-- 中间信息栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="被检查单位："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/corpName"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="单位地址："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/corpAdress"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:gravity="center_vertical|left"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="法定代表人："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/fddbr"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="法定代表人电话："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/fddbrlxdh"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="主要负责人："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/zyfzr"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="主要负责人电话："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/zyfzrlxdh"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="检查场所："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/place"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="执法流程："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <Spinner
                    android:id="@+id/flow"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:entries="@array/flow"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="检查开始时间："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
               <TextView
                    android:id="@+id/beginTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="检查结束时间："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="检查情况："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/note"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:gravity="top|left"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
       <!-- 下部人员栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="执法人员："
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="执法证件"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/addzfry"
                        android:layout_width="30dp"
                        android:src="@drawable/sign_add"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/delzfry"
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sign_delete"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <ListView
                android:id="@+id/zfrylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <!--底部按钮栏-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hei"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/co"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/comit"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/db_comit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="保存"
                        android:textColor="@color/bai"
                        android:gravity="center" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tj"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/comit2"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/comit_tj"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="提交"
                        android:textColor="@color/bai"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/print"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/print"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="打印"
                        android:textColor="@color/bai"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
