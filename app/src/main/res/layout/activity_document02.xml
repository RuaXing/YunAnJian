<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quanta.aj.yunanjian.activity.enforcement.Document02Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--抬头标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ttbar1">
            <com.quanta.aj.yunanjian.mywegit.Title_Sm_Layout
                android:id="@+id/domtt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- 中间信息栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="被检查单位："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/corpName"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_corners_white_b"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="现场负责人："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/leaderName"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="文书编号："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/no"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="限期整改时间："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/limitTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="限期整改问题："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/limitProblem"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:gravity="left|top"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <LinearLayout
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|left"
                    android:layout_height="match_parent"
                    android:text="立即整改问题："/>
                <TextView
                    android:layout_width="1dp"
                    android:background="@color/hei"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/immediateProblem"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:gravity="top|left"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 下部人员栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="执法人员："
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="执法证件"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/addzfry"
                        android:layout_width="30dp"
                        android:src="@drawable/sign_add"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/delzfry"
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/sign_delete"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hei"/>
            <ListView
                android:id="@+id/zfrylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <!--底部按钮栏-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hei"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/co"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/comit"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/db_comit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="保存"
                        android:textColor="@color/bai"
                        android:gravity="center" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tj"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/comit2"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/comit_tj"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="提交"
                        android:textColor="@color/bai"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pr"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/print"
                    android:background="@drawable/bg_corners_6959cd"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/print"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="打印"
                        android:textColor="@color/bai"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zhuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/tozgfc"
                android:background="@drawable/bg_corners_6959cd"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/action_aqsjfx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="转整改复查"
                    android:textColor="@color/bai"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
