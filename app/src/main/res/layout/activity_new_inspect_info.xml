<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.enforcement.InspectInfoNewActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--企业信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/ttbar1">
            <TextView
                android:text="企业信息"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textColor="@color/bai"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|left"/>
            <ImageView
                android:id="@+id/leftbtn"
                android:layout_width="30dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/back_jiantou"/>
        </LinearLayout>
        <ListView
            android:id="@+id/qyxx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <!--任务信息-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="任务信息"
            android:gravity="center_vertical|left"
            android:textColor="@color/bai"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:background="@color/ttbar1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="检查方式："/>
                <Spinner
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="检查开始时间："/>
                <TextView
                    android:id="@+id/startTime"
                    android:gravity="center_vertical|left"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="检查结束时间："/>
                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="组长："/>
                <EditText
                    android:id="@+id/leader"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/addleader"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="20dp"
                    android:src="@drawable/btn_add"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="组员："/>
                <EditText
                    android:id="@+id/member"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/bg_corners_white_b"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/addmember"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|right"
                    android:layout_height="20dp"
                    android:src="@drawable/btn_add"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="状态："/>
                <Spinner
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:entries="@array/checkstatus"/>
            </LinearLayout>
        </LinearLayout>
        <!--文书列表-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/ttbar1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/bai"
                android:text="文书列表" />
            <LinearLayout
                android:id="@+id/addefbtn"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_corners_6959cd"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/bai"
                    android:text="添加文书"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/ef_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <!--底部按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/comit"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textColor="@color/bai"
                android:background="@drawable/bg_corners_6959cd"
                android:text="保存"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/endef"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/bai"
                android:layout_height="match_parent"
                android:background="@drawable/bg_corners_6959cd"
                android:text="结束检查"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/ajcl"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/bai"
                android:layout_height="match_parent"
                android:background="@drawable/bg_corners_6959cd"
                android:text="案件处理"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/bai"
                android:layout_height="match_parent"
                android:background="@drawable/bg_corners_6959cd"
                android:text="取消"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
