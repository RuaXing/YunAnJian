<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quanta.aj.yunanjian.activity.corpInf.QueryCPINFActivity">

    <com.quanta.aj.yunanjian.mywegit.Title_Big_Layout
        android:id="@+id/queryCPINFTT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hei"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:gravity="center_horizontal">

            <EditText
                android:id="@+id/corpname"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="2dp"
                android:background="@drawable/bg_corners_white_b"
                android:layout_height="match_parent"
                android:hint="@string/corpname" />
        <Button
            android:id="@+id/searchcorp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="@string/query"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/bg_corners_white"/>
    </LinearLayout>

    <ListView
        android:id="@+id/corplist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>
</LinearLayout>
